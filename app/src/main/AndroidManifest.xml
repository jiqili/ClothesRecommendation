<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baidu.speech.myapplication">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".editUserInfo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".version"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity
            android:name=".clothes_show"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".match_show"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".edit6"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".edit5"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".matchEdit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".edit4"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".edit3"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".edit2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".edit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".clothesEdit"
            android:label="@string/title_activity_clothes_edit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.baidu.speech.myapplication.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>